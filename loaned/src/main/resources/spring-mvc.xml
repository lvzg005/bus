	<!-- 异常解析器 -->
	<bean id="exceptionResolver"
		class="com.company.bus.loaned.common.web.resolver.CustomMappingExceptionResolver">
		<property name="exceptionMappings">
			<props>
				<!-- 可定义多个类型异常并分类 -->
				<prop key="com.company.bus.loaned.common.exceptions.BizException">errors/bizExError</prop>
				<prop key="com.company.bus.loaned.common.exceptions.SysException">errors/sysExError</prop>
			</props>
		</property>
		<property name="defaultErrorView" value="errors/defaultExError" />
	</bean>

</beans>
